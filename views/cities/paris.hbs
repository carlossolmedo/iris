<section class="jumbotron text-center">
    <div class="container container-maps">
        <div class="">
            <h1>{{title}}</h1>
            <p class="lead text-muted">Trotinettes pr√©sente sur la capital</p>
        </div>
        <div class="col-sm-12">
            <div id="map"></div>
        </div>
        <script>
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: {lat: 48.858989, lng: 2.3450116},
                    zoom: 14
                });
                setMarkers(map);
            }

            var scooters = [
                ['Chapelle', 48.854471, 2.338319, 1],
                ['La Sorbonne', 48.850177, 2.346900, 2],
                ['Les Archives', 48.858304, 2.362186, 3],
                ['Saint-Merri', 48.859438, 2.350512, 4],
                ['Louvre', 48.860684, 2.338322, 5]
            ];

            function setMarkers(map) {
                // Adds markers to the map.

                var image = {
                    url: '/images/logo-iris.png',
                    // This marker is 20 pixels wide by 32 pixels high.
                    size: new google.maps.Size(20, 32),
                    // The origin for this image is (0, 0).
                    origin: new google.maps.Point(0, 0),
                    // The anchor for this image is the base of the flagpole at (0, 32).
                    anchor: new google.maps.Point(0, 32)
                };

                var shape = {
                    coords: [1, 1, 1, 20, 18, 20, 18, 1],
                    type: 'poly'
                };
                for (var i = 0; i < scooters.length; i++) {
                    var scooter = scooters[i];
                    var marker = new google.maps.Marker({
                        position: {lat: scooter[1], lng: scooter[2]},
                        map: map,
                        icon: image,
                        shape: shape,
                        title: scooter[0],
                        zIndex: scooter[3]
                    });
                }
            }

        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB7zz4XRigqXGw8eME_zYeGLzL4MeyYIKk&callback=initMap" async defer></script>
    </div>
</section>